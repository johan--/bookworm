      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <style>
        	body {
    			background-image: url("bookworm_logo.png");
			}
		</style>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
</div>
